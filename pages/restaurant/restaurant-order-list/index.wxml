<block wx:if="{{this_group_val == 3}}">

  <block wx:for="{{postlist.finished}}" >
    <view class="ro-item gridXb flex">
        <view class="r-logo" bindtap="user_orderinfo_bind" data-ordersn="{{item.order_sn}}" id="{{item.id}}">
            <image src="{{item.dish_img}}" class="r-logo-img" mode="aspectFill"></image>
        </view>
        <view class="r-info sub">
            <view class="lineText r-i-name" bindtap="user_orderinfo_bind" data-ordersn="{{item.order_sn}}" id="{{item.id}}">
                <text class="fr">{{item.order_status_txt}}</text>
                <text class="f18 r-i-n">{{item.dish_name}}（{{item.dish_quyu}}）</text>
            </view>
            <view class="f14 grey mt5" bindtap="user_orderinfo_bind" data-ordersn="{{item.order_sn}}" id="{{item.id}}">
                <view>下单时间：{{item.createtime}}</view>
                <view>总价：￥{{item.order_price}}</view>
            </view>
            
            <view class="tr r-info-b">
                <block wx:if="{{item.order_action.cancel}}">
                    <button type="default" class="r-i-b mr10 red" bindtap="delete_user_order" data-ordersn="{{item.order_sn}}" id="{{item.id}}">删除订单</button>
                </block>
              </view>
        </view>
    </view>
</block>

</block>

<view class="m20 tc grey loading" wx:if="{{showLoading}}">
    <text class="iconfont icon-loading animated infinite rotate mr5"></text><text>正在加载...</text>
</view>
</view>
</block>
</block>


